---
interface Testimonial {
  quote: string;
  author: string;
  role: string;
}

const testimonials: Testimonial[] = [
  {
    quote: "Sonacove Meets has transformed how our remote team collaborates. The simplicity and security give us peace of mind.",
    author: "Sarah Johnson",
    role: "Product Manager"
  },
  {
    quote: "As someone who values privacy, I appreciate that Sonacove doesn't track or store our meeting data. It's refreshing.",
    author: "Michael Chen",
    role: "Security Consultant"
  },
  {
    quote: "The speed at which meetings start is impressive. No more waiting for downloads or updates.",
    author: "Elena Rodriguez",
    role: "Team Lead"
  }
];
---

<section class="py-16 bg-gradient-to-br from-primary-50 to-accent-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">What People Are Saying</h2>
    
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-white p-6 rounded-xl shadow-md">
          <div class="flex gap-1 mb-4">
            {Array(5).fill(0).map(() => (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <p class="text-gray-600 italic mb-4">"{testimonial.quote}"</p>
          <div>
            <p class="font-semibold text-gray-800">{testimonial.author}</p>
            <p class="text-gray-500 text-sm">{testimonial.role}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>