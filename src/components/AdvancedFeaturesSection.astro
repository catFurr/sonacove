---
interface AdvancedFeature {
  title: string;
  description: string;
  icon: string;
  benefits: string[];
}

const advancedFeatures: AdvancedFeature[] = [
  {
    title: "Breakout Rooms",
    description: "Split your meeting into smaller focused groups and bring everyone back together seamlessly.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
    </svg>`,
    benefits: [
      "Create up to 50 simultaneous breakout rooms",
      "Assign participants automatically or manually",
      "Broadcast messages to all rooms at once",
      "Set timers for automatic room closure"
    ]
  },
  {
    title: "Interactive Whiteboard",
    description: "Collaborate visually with our state-of-the-art digital whiteboard that everyone can access simultaneously.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
    </svg>`,
    benefits: [
      "Real-time collaborative drawing and diagramming",
      "Multiple drawing tools including shapes, text, and freehand",
      "Save and export whiteboard sessions",
      "Infinite canvas with zoom and pan capabilities"
    ]
  },
  {
    title: "Document Collaboration",
    description: "Edit and view documents together in real-time with our integrated Etherpad technology.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>`,
    benefits: [
      "Simultaneous editing by all participants",
      "Version history and change tracking",
      "Rich text formatting options",
      "Export to multiple formats including PDF and Word"
    ]
  }
];
---

<section class="py-16 bg-gradient-to-br from-primary-50 to-accent-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-4">Advanced Collaboration Tools</h2>
    <p class="text-xl text-gray-600 text-center mb-12 max-w-3xl mx-auto">Sonacove Meets goes beyond basic video conferencing with powerful tools designed to enhance team productivity.</p>
    
    <div class="grid md:grid-cols-3 gap-8">
      {advancedFeatures.map(feature => (
        <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100 hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full flex items-center justify-center text-white mb-4">
            <Fragment set:html={feature.icon} />
          </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">{feature.title}</h3>
          <p class="text-gray-600 mb-4">{feature.description}</p>
          <ul class="space-y-2">
            {feature.benefits.map(benefit => (
              <li class="flex items-start">
                <svg class="h-5 w-5 text-primary-500 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-gray-600">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>