---
import { Image } from "astro:assets";
import hero_image from "../assets/hero-image.png";
import Posthog from "./posthog.astro";
---

<section class="py-20 md:py-32">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center">
      <div class="md:w-1/2 mb-10 md:mb-0">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-4"
        >
          Fast, Simple, <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-primary-600 to-accent-600"
            >Secure</span
          > Online Meetings
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-lg">
          Experience the next generation of digital collaboration with Sonacove Meets.
          Now publicly available, sign up for free today!
        </p>

        <Posthog />

        <div class="max-w-md">
          <a
            onclick="posthog.capture('onboarding_button_clicked')"
            href="/onboarding"
            class="block w-full text-center px-6 py-3 bg-gradient-to-r from-primary-600 to-accent-600 text-white font-medium rounded-lg hover:opacity-90 transition-all transform hover:scale-[1.02] whitespace-nowrap"
          >
            Get Started Now
          </a>
        </div>
      </div>
      <div class="md:w-1/2">
        <div class="relative">
          <div
            class="absolute -inset-1 bg-gradient-to-r from-primary-500 to-accent-500 rounded-2xl blur opacity-30"
          >
          </div>
          <div class="relative bg-white p-2 rounded-2xl shadow-xl">
            <Image
              src={hero_image}
              alt="Online meeting illustration"
              class="rounded-xl w-full"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
